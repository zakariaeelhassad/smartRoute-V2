<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ====================== WAREHOUSE ====================== -->
    <changeSet id="1" author="zakariae">
<!--        Création table Warehouse — v1.0 — Zakariae — 2025-11-07-->
        <createTable tableName="warehouse">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)" />
            <column name="address" type="VARCHAR(255)" />
            <column name="latitude" type="DOUBLE PRECISION" />
            <column name="longitude" type="DOUBLE PRECISION" />
            <column name="opening_time" type="TIME" />
            <column name="closing_time" type="TIME" />
        </createTable>
        <rollback><dropTable tableName="warehouse"/></rollback>
    </changeSet>

    <!-- ====================== VEHICLE ====================== -->
    <changeSet id="2" author="zakariae">
<!--        Création table Vehicle — v1.0 — Zakariae — 2025-11-07-->
        <createTable tableName="vehicle">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="capacity_weight" type="DOUBLE PRECISION"/>
            <column name="capacity_volume" type="DOUBLE PRECISION"/>
            <column name="max_deliveries" type="INT"/>
            <column name="vehicle_type" type="VARCHAR(50)"/>
        </createTable>
        <rollback><dropTable tableName="vehicle"/></rollback>
    </changeSet>

    <!-- ====================== TOUR ====================== -->
    <changeSet id="3" author="zakariae">
<!--        Création table Tour — v1.0 — Zakariae — 2025-11-07-->
        <createTable tableName="tour">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date" type="DATE" />
            <column name="total_distance" type="DOUBLE PRECISION" />
            <column name="algorithm_type" type="VARCHAR(50)" />
            <column name="vehicle_id" type="BIGINT" />
            <column name="warehouse_id" type="BIGINT" />
        </createTable>
        <rollback><dropTable tableName="tour"/></rollback>
    </changeSet>

    <changeSet id="3.1" author="zakariae">
<!--        Ajout FK Tour → Vehicle-->
        <addForeignKeyConstraint
                baseTableName="tour"
                baseColumnNames="vehicle_id"
                constraintName="fk_tour_vehicle"
                referencedTableName="vehicle"
                referencedColumnNames="id"/>
        <rollback><dropForeignKeyConstraint baseTableName="tour" constraintName="fk_tour_vehicle"/></rollback>
    </changeSet>

    <changeSet id="3.2" author="zakariae">
<!--        Ajout FK Tour → Warehouse-->
        <addForeignKeyConstraint
                baseTableName="tour"
                baseColumnNames="warehouse_id"
                constraintName="fk_tour_warehouse"
                referencedTableName="warehouse"
                referencedColumnNames="id"/>
        <rollback><dropForeignKeyConstraint baseTableName="tour" constraintName="fk_tour_warehouse"/></rollback>
    </changeSet>

    <!-- ====================== DELIVERY ====================== -->
    <changeSet id="4" author="zakariae">
<!--        Création table Delivery — v1.0 — Zakariae — 2025-11-07-->
        <createTable tableName="delivery">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(255)" />
            <column name="latitude" type="DOUBLE PRECISION" />
            <column name="longitude" type="DOUBLE PRECISION" />
            <column name="weight" type="DOUBLE PRECISION" />
            <column name="volume" type="DOUBLE PRECISION" />
            <column name="time_window" type="VARCHAR(100)" />
            <column name="delivery_status" type="VARCHAR(50)" />
            <column name="tour_id" type="BIGINT" />
        </createTable>
        <rollback><dropTable tableName="delivery"/></rollback>
    </changeSet>

    <changeSet id="4.1" author="zakariae">
<!--        Ajout FK Delivery → Tour-->
        <addForeignKeyConstraint
                baseTableName="delivery"
                baseColumnNames="tour_id"
                constraintName="fk_delivery_tour"
                referencedTableName="tour"
                referencedColumnNames="id"/>
        <rollback><dropForeignKeyConstraint baseTableName="delivery" constraintName="fk_delivery_tour"/></rollback>
    </changeSet>

</databaseChangeLog>
